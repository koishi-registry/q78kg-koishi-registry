{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema",
  "description": "Schema for Koishi plugin package.json",
  "type": "object",
  "required": [
    "name",
    "version"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "pattern": "^(@koishijs\\/plugin-[a-zA-Z0-9]+(-[a-zA-Z0-9]+)*|@[^/]+\\/koishi-plugin-[a-zA-Z0-9]+(-[a-zA-Z0-9]+)*|koishi-plugin-[a-zA-Z0-9]+(-[a-zA-Z0-9]+)*)$"
    },
    "version": {
      "type": "string",
      "description": "Package version",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    },
    "description": {
      "type": "string",
      "description": "Package description"
    },
    "main": {
      "type": "string",
      "description": "Main entry file"
    },
    "types": {
      "type": "string",
      "description": "TypeScript type definition file"
    },
    "typings": {
      "oneOf": [
        {
          "type": "string",
          "description": "TypeScript type definition file (alternative to types)"
        },
        {
          "type": "array",
          "description": "Multiple TypeScript type definition files",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "files": {
      "type": "array",
      "description": "Files or directories to include in the published package",
      "items": {
        "type": "string"
      }
    },
    "scripts": {
      "type": "object",
      "description": "Package scripts",
      "additionalProperties": {
        "type": "string"
      }
    },
    "license": {
      "type": "string",
      "description": "Package license"
    },
    "author": {
      "oneOf": [
        {
          "type": "string",
          "description": "Author information (String format: 'Name <email> (url)')"
        },
        {
          "type": "object",
          "description": "Author information (Object)",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          }
        }
      ]
    },
    "contributors": {
      "type": "array",
      "description": "Contributors list",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "Contributor information (String format: 'Name <email> (url)')"
          },
          {
            "type": "object",
            "description": "Contributor information (Object)",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "maintainers": {
      "type": "array",
      "description": "Maintainers list",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "Maintainer information (String format: 'Name <email> (url)')"
          },
          {
            "type": "object",
            "description": "Maintainer information (Object)",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "repository": {
      "oneOf": [
        {
          "type": "string",
          "description": "Repository address (String)"
        },
        {
          "type": "object",
          "description": "Repository information (Object)",
          "properties": {
            "type": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "directory": {
              "type": "string",
              "description": "Directory within the repository (for monorepos)"
            }
          }
        }
      ]
    },
    "bugs": {
      "oneOf": [
        {
          "type": "string",
          "description": "Bug tracker address (String)"
        },
        {
          "type": "object",
          "description": "Bug tracker information (Object)",
          "properties": {
            "url": {
              "type": "string"
            },
            "email": {
              "type": "string"
            }
          }
        }
      ]
    },
    "homepage": {
      "type": "string",
      "description": "Project homepage"
    },
    "keywords": {
      "type": "array",
      "description": "Keywords list",
      "items": {
        "type": "string"
      }
    },
    "peerDependencies": {
      "type": "object",
      "description": "Peer dependencies",
      "required": [
        "koishi"
      ],
      "properties": {
        "koishi": {
          "type": "string",
          "description": "Koishi version requirement"
        }
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Dependencies",
      "additionalProperties": {
        "type": "string"
      }
    },
    "devDependencies": {
      "type": "object",
      "description": "Development dependencies",
      "additionalProperties": {
        "type": "string"
      }
    },
    "private": {
      "type": "boolean",
      "description": "Is private package"
    },
    "publishConfig": {
      "type": "object",
      "description": "Publishing configuration",
      "properties": {
        "access": {
          "type": "string",
          "enum": [
            "public",
            "restricted"
          ]
        },
        "registry": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "provenance": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "koishi": {
      "type": "object",
      "description": "Koishi plugin extra metadata",
      "properties": {
        "description": {
          "oneOf": [
            {
              "type": "string",
              "description": "Plugin description (String)"
            },
            {
              "type": "object",
              "description": "Multilingual plugin description",
              "additionalProperties": {
                "type": "string"
              }
            }
          ]
        },
        "service": {
          "type": "object",
          "description": "Service related configuration",
          "properties": {
            "required": {
              "type": "array",
              "description": "Required services",
              "items": {
                "type": "string"
              }
            },
            "optional": {
              "type": "array",
              "description": "Optional services",
              "items": {
                "type": "string"
              }
            },
            "implements": {
              "type": "array",
              "description": "Implemented services",
              "items": {
                "type": "string"
              }
            },
            "require": {
              "type": "array",
              "description": "Required services (alternative to required)",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "preview": {
          "type": "boolean",
          "description": "Is preview version"
        },
        "hidden": {
          "type": "boolean",
          "description": "Hidden in plugin market"
        },
        "browser": {
          "type": "boolean",
          "description": "Browser compatibility"
        },
        "recommendeds": {
          "type": "array",
          "description": "Recommended plugins",
          "items": {
            "type": "string"
          }
        },
        "insecure": {
          "type": "boolean",
          "description": "Is insecure package"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
